<% provide(:title, 'Log in') %>
<h1>Log in Bitches!</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for(:session, url: login_path) do |f| %>

			<%= f.label :email, "Enter your Email!" %>
			<%= f.email_field :email, class: "form-control" %>

			<%= f.label :password, "Enter your Password" %>
			<%= f.password_field :password, class: "form-control" %>

			<%= f.submit "Login you cunt", class: "btn btn-primary" %>

			<%= f.label :remember_me, class: "checkbox inline" do %>
				<%= f.check_box :remember_me %>
				<span>Remember me mother fucker</span>
			<% end %>

		<% end %>

		<p>New User? <%= link_to "Sign Up Now", signup_path %>
	</div>
</div>